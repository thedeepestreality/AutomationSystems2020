<robot name="bender">

    <material name="black">
        <color rgba="0 0 0 1"/>
    </material>

    <material name="gray">
        <color rgba="0.4 0.4 0.4 1"/>
    </material>

    <material name="light gray">
        <color rgba="0.8 0.8 0.8 1"/>
    </material>

    <material name="light green">
        <color rgba="0.4 0.8 0.4 1"/>
    </material>

    <material name="light blue">
        <color rgba="0.4 0.4 0.8 1"/>
    </material>

    <material name="light red">
        <color rgba="0.8 0.4 0.4 1"/>
    </material>

    <link name="world"/>
    <link name="base">
        <visual>
            <geometry>
                <cylinder radius="0.3" length="0.2"/>   
            </geometry>
            <material name="black"/>
        </visual>
    </link>

    <link name="link_1">
        <visual>
            <geometry>
                <cylinder radius="0.1" length="0.4"/>   
            </geometry>
            <origin xyz="0.0 0 0.2" rpy="0 0 0" />
            <material name="gray"/>
        </visual>
    </link>

    <link name="link_2">
        <visual>
            <geometry>
                <cylinder radius="0.05" length="0.8"/>   
            </geometry>
            <origin xyz="0 0 0.4" rpy="0 0 0" />
            <material name="light gray"/>
        </visual>
        <inertial>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <mass value="5"/>
            <inertia ixx="1"  ixy="0"  ixz="0" iyy="1" iyz="0" izz="0" />
        </inertial>
    </link>

    <link name="link_3"/>

    <link name="link_4">
        <visual>
            <geometry>
                <cylinder radius="0.05" length="0.4"/>   
            </geometry>
            <origin xyz="0 0 0.2" rpy="0 0 0" />
            <material name="light blue"/>
        </visual>
    </link>

    <link name="link_5">
        <visual>
            <geometry>
                <cylinder radius="0.05" length="0.2"/>   
            </geometry>
            <origin xyz="0 0 0.1" rpy="0 0 0" />
            <material name="light green"/>
        </visual>
    </link>

    <link name="link_6"/>

    <link name="link_eef">
        <visual>
            <geometry>
                <box size="0.1 0.1 0.1"/>   
            </geometry>
            <origin xyz="0 0 0.05" rpy="0 0 0" />
            <material name="black"/>
        </visual>
        <inertial>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <mass value="0"/>
            <inertia ixx="0"  ixy="0"  ixz="0" iyy="0" iyz="0" izz="0" />
        </inertial>
    </link>

    <joint name="world_to_base" type="fixed">
        <parent link="world"/>
        <child link="base"/>     
        <origin xyz="0 0 0.1" rpy="0 0 0"/>
    </joint>

    <joint name="joint_1" type="revolute">
        <parent link="base"/>
        <child link="link_1"/>
        <origin xyz="0.0 0 0.2" rpy="0 1.57 0"/>
        <limit lower="-3.15" upper="3.15"/>
        <axis xyz="1 0 0"/>
    </joint>

    <joint name="joint_2" type="revolute">
        <parent link="link_1"/>
        <child link="link_2"/>
        <origin xyz="0 0 0.4" rpy="0 -1.57 0"/>
        <limit lower="-3.15" upper="3.15"/>
        <axis xyz="0 1 0"/>
    </joint>

    <joint name="joint_3" type="revolute">
        <parent link="link_2"/>
        <child link="link_3"/>
        <origin xyz="0 0 0.8" rpy="0 0 0"/>
        <limit lower="-3.15" upper="3.15"/>
        <axis xyz="0 1 0"/>
    </joint>

    <joint name="joint_4" type="revolute">
        <parent link="link_3"/>
        <child link="link_4"/>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <limit lower="-3.15" upper="3.15"/>
        <axis xyz="0 0 1"/>
    </joint>

    <joint name="joint_5" type="revolute">
        <parent link="link_4"/>
        <child link="link_5"/>
        <origin xyz="0 0 0.4" rpy="0 0 0"/>
        <limit lower="-3.15" upper="3.15"/>
        <axis xyz="0 1 0"/>
    </joint>

    <joint name="joint_6" type="revolute">
        <parent link="link_5"/>
        <child link="link_6"/>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <limit lower="-3.15" upper="3.15"/>
        <axis xyz="0 0 1"/>
    </joint>

    <joint name="joint_eef" type="fixed">
        <parent link="link_6"/>
        <child link="link_eef"/>     
        <origin xyz="0 0 0.2" rpy="0 0 0"/>
    </joint>

    <!-- MARKER -->

    <link name="marker_base"/>

    <joint name="world_to_marker_base" type="prismatic">
        <parent link="world"/>
        <child link="marker_base"/>    
        <origin xyz="3 0 0.5" rpy="0 -1.5708 0" />
        <limit lower="-1" upper="1" velocity="1"/>
    </joint>
 
    <link name="marker">
        <visual>
            <geometry>
                <mesh filename="dynamic_tests/meshes2/files/arucocube_black.stl" scale="0.0051"/>
            </geometry>
            <origin xyz="0 0 0.1" rpy="0 0 0" />
            <material name="black"/>
        </visual>
    </link>

    <joint name="base_to_marker" type="fixed">
        <parent link="marker_base"/>
        <child link="marker"/> 
        <origin xyz="0 0 0" rpy="0 0 0" />    
    </joint>

    <link name="marker_background">
        <visual>
            <geometry>
                <box size="0.22 0.22 0.2"/>
            </geometry>
            <origin xyz="0 0 0.1" rpy="0 0 0" />
        </visual>
    </link>

    <joint name="marker_to_bg" type="fixed">
        <parent link="marker"/>
        <child link="marker_background"/>     
    </joint>

</robot>